<h1> New Vendor-Sweet Association </h1>

    <% if flash[:not_valid] %>
    <% flash[:not_valid].each do |v| %>
    <%= v %>
    <% end %>
    <% end %>

<%= form_for @vendor_sweet do |f| %>
    <%= f.label :vendor_id %>
    <%= f.collection_select :vendor_id, Vendor.all, :id, :name %>
    <%= f.label :sweet_id %>
    <%= f.collection_select :sweet_id, Sweet.all, :id, :name %>
    <%= f.label :price %>
    <%= f.number_field :price %>
    <%= f.submit %>
    <% end %>